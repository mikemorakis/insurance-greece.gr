---
import { testimonials } from '../../data/testimonials';
const reviews = testimonials.slice(0, 8);
const avgRating = (reviews.reduce((sum, r) => sum + r.rating, 0) / reviews.length).toFixed(1);
---
<section class="reviews-bar">
  <div class="container">
    <div class="reviews-header">
      <svg class="google-logo" viewBox="0 0 24 24" width="24" height="24">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      <div class="reviews-rating">
        <span class="reviews-score">{avgRating}</span>
        <div class="reviews-stars">
          {Array.from({ length: 5 }).map((_, i) => (
            <svg width="16" height="16" viewBox="0 0 24 24" fill="#FBBC05" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" /></svg>
          ))}
        </div>
        <span class="reviews-count">Google Reviews</span>
      </div>
    </div>
    <div class="reviews-track-wrapper">
      <div class="reviews-track">
        {[...reviews, ...reviews].map((review) => (
          <div class="review-card">
            <div class="review-top">
              <div class="review-avatar">{review.name.charAt(0)}</div>
              <div>
                <div class="review-name">{review.name}</div>
                <div class="review-stars">
                  {Array.from({ length: review.rating }).map(() => (
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="#FBBC05" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" /></svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="review-text">{review.text.length > 150 ? review.text.slice(0, 150) + '...' : review.text}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
.reviews-bar { padding: var(--spacing-8) 0; background: var(--white); border-bottom: 1px solid var(--gray-100); }
.reviews-header { display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-6); justify-content: center; }
.google-logo { flex-shrink: 0; }
.reviews-rating { display: flex; align-items: center; gap: var(--spacing-2); }
.reviews-score { font-size: var(--font-size-xl); font-weight: 700; color: var(--color-text); }
.reviews-stars { display: flex; gap: 2px; }
.reviews-count { font-size: var(--font-size-sm); color: var(--color-text-light); }
.reviews-track-wrapper { overflow: hidden; mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent); -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent); }
.reviews-track { display: flex; gap: var(--spacing-4); animation: scrollReviews 40s linear infinite; width: max-content; }
.reviews-track:hover { animation-play-state: paused; }
.review-card { flex-shrink: 0; width: 300px; padding: var(--spacing-4); background: var(--gray-50); border-radius: var(--radius-xl); border: 1px solid var(--gray-100); }
.review-top { display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-3); }
.review-avatar { width: 36px; height: 36px; border-radius: 50%; background: var(--brand-orange); color: var(--white); display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: var(--font-size-sm); flex-shrink: 0; }
.review-name { font-weight: 600; font-size: var(--font-size-sm); color: var(--color-text); }
.review-stars { display: flex; gap: 1px; }
.review-text { font-size: var(--font-size-sm); color: var(--color-text-light); line-height: 1.5; margin: 0; }
@keyframes scrollReviews { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }
@media (max-width: 768px) { .review-card { width: 260px; } }
</style>
