---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/forms/ContactForm';
import FAQAccordion from '../components/ui/FAQAccordion';
import { SITE_CONFIG } from '../data/site-config';
import { contactFaqs } from '../data/faqs';
---
<BaseLayout
  title="Contact Us | Insurance Greece"
  description="Contact Insurance Greece for all your insurance needs in Greece. Get in touch for health, car, home, and travel insurance queries. English-speaking support."
  canonical="/contact-us/"
  jsonLd={[
    { '@context': 'https://schema.org', '@type': 'BreadcrumbList', itemListElement: [{ '@type': 'ListItem', position: 1, name: 'Home', item: 'https://insurance-greece.com/' }, { '@type': 'ListItem', position: 2, name: 'Contact Us', item: 'https://insurance-greece.com/contact-us/' }] },
    { '@context': 'https://schema.org', '@type': 'FAQPage', mainEntity: contactFaqs.map(faq => ({ '@type': 'Question', name: faq.question, acceptedAnswer: { '@type': 'Answer', text: faq.answer.replace(/<[^>]*>/g, '') } })) },
    { '@context': 'https://schema.org', '@type': 'LocalBusiness', name: SITE_CONFIG.name, telephone: SITE_CONFIG.contact.phone, email: SITE_CONFIG.contact.email, address: { '@type': 'PostalAddress', streetAddress: 'Sikelianou 9', addressLocality: 'Crete', postalCode: '74100', addressCountry: 'GR' } },
  ]}
>
  <section class="hero">
    <div class="container">
      <h1>Contact Us</h1>
      <p>We're here to help with all your insurance needs in Greece</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <div class="form-section">
          <h2>Send Us a Message</h2>
          <p>Fill out the form below and we'll get back to you within 48 hours.</p>
          <ContactForm client:load />
        </div>

        <div class="info-section">
          <div class="info-card">
            <h3>Contact Information</h3>
            <address>
              <div class="info-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                <div>
                  <strong>Address</strong>
                  <p>{SITE_CONFIG.contact.address}</p>
                </div>
              </div>
              <div class="info-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <div>
                  <strong>Phone</strong>
                  <p><a href={`tel:${SITE_CONFIG.contact.phone.replace(/\s/g, '')}`}>{SITE_CONFIG.contact.phone}</a></p>
                </div>
              </div>
              <div class="info-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                <div>
                  <strong>Email</strong>
                  <p><a href={`mailto:${SITE_CONFIG.contact.email}`}>{SITE_CONFIG.contact.email}</a></p>
                </div>
              </div>
            </address>
            <p class="response-note">We reply within {SITE_CONFIG.contact.responseTime}</p>
          </div>

          <div class="social-card">
            <h3>Follow Us</h3>
            <div class="social-links">
              <a href={SITE_CONFIG.social.facebook} target="_blank" rel="noopener noreferrer">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                Facebook
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="faq-section">
        <h2>Frequently Asked Questions</h2>
        <FAQAccordion client:visible faqs={contactFaqs} />
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.hero { background: linear-gradient(rgba(15,23,42,0.7), rgba(30,41,59,0.75)), url('/images/insurance-greece-10.jpg') center/cover no-repeat; color: var(--white); padding: var(--spacing-16) 0; text-align: center; }
.hero h1 { font-size: var(--font-size-4xl); margin-bottom: var(--spacing-4); color: var(--white); }
.hero p { font-size: var(--font-size-xl); color: var(--gray-300); margin-bottom: 0; }
.contact-grid { display: grid; grid-template-columns: 1fr 400px; gap: var(--spacing-12); margin-bottom: var(--spacing-12); }
.form-section h2 { margin-bottom: var(--spacing-2); }
.form-section > p { color: var(--color-text-light); margin-bottom: var(--spacing-6); }
.info-section { display: flex; flex-direction: column; gap: var(--spacing-6); }
.info-card, .social-card { background: var(--color-background-alt); padding: var(--spacing-6); border-radius: var(--radius-xl); }
.info-card h3, .social-card h3 { font-size: var(--font-size-lg); margin-bottom: var(--spacing-4); }
.info-card address { font-style: normal; }
.info-item { display: flex; gap: var(--spacing-4); padding: var(--spacing-4) 0; border-bottom: 1px solid var(--color-border); }
.info-item:last-of-type { border-bottom: none; }
.info-item svg { flex-shrink: 0; color: var(--brand-orange); margin-top: 2px; }
.info-item strong { display: block; margin-bottom: var(--spacing-1); font-size: var(--font-size-sm); color: var(--color-text); }
.info-item p { margin: 0; color: var(--color-text-light); font-size: var(--font-size-sm); }
.info-item a { color: var(--color-primary); }
.response-note { margin-top: var(--spacing-4); padding-top: var(--spacing-4); border-top: 1px solid var(--color-border); font-style: italic; font-size: var(--font-size-sm); color: var(--gray-500); }
.social-links { display: flex; flex-direction: column; gap: var(--spacing-3); }
.social-links a { display: flex; align-items: center; gap: var(--spacing-3); padding: var(--spacing-3); background: var(--white); border-radius: var(--radius-lg); color: var(--color-text); font-weight: 500; transition: background-color var(--transition-fast); text-decoration: none; }
.social-links a:hover { color: var(--brand-orange); }
.faq-section { padding-top: var(--spacing-12); border-top: 1px solid var(--color-border); max-width: 800px; margin: 0 auto; }
.faq-section h2 { text-align: center; margin-bottom: var(--spacing-8); }
@media (max-width: 1024px) { .contact-grid { grid-template-columns: 1fr; } }
@media (max-width: 768px) { .hero { padding: var(--spacing-10) 0; } .hero h1 { font-size: var(--font-size-3xl); } }
</style>
