---
import BaseLayout from '../../layouts/BaseLayout.astro';
import FAQAccordion from '../../components/ui/FAQAccordion';
import Picture from '../../components/ui/Picture.astro';
import { SERVICE_TYPES, getServiceDescription } from '../../data/navigation';
import { servicesFaqs } from '../../data/faqs';
---
<BaseLayout
  title="Insurance Services | Insurance Greece"
  description="Comprehensive insurance solutions for expats in Greece. Health, car, home, travel, boat, and residence permit insurance."
  canonical="/insurance-services/"
  jsonLd={[
    { '@context': 'https://schema.org', '@type': 'BreadcrumbList', itemListElement: [{ '@type': 'ListItem', position: 1, name: 'Home', item: 'https://insurance-greece.com/' }, { '@type': 'ListItem', position: 2, name: 'Insurance Services', item: 'https://insurance-greece.com/insurance-services/' }] },
    { '@context': 'https://schema.org', '@type': 'FAQPage', mainEntity: servicesFaqs.map(faq => ({ '@type': 'Question', name: faq.question, acceptedAnswer: { '@type': 'Answer', text: faq.answer.replace(/<[^>]*>/g, '') } })) },
  ]}
>
  <section class="hero">
    <div class="container">
      <h1>Our Insurance Services</h1>
      <p>Comprehensive insurance solutions for expats living in Greece</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <p class="intro">We offer a complete range of insurance products for expats living in Greece. All services are available in English, and we compare options from multiple providers to find you the best coverage and rates.</p>

      <div class="services-grid">
        {SERVICE_TYPES.map((service) => (
          <a href={`/insurance-services/${service.slug}/`} class="service-card">
            <div class="service-icon">
              <Picture src={service.image} alt={service.name} loading="lazy" />
            </div>
            <div class="service-info">
              <h2>{service.name}</h2>
              <p>{getServiceDescription(service.slug)}</p>
              <span class="learn-more">Learn More &rarr;</span>
            </div>
          </a>
        ))}
      </div>

      <div class="cta-section">
        <h2>Not Sure What You Need?</h2>
        <p>Contact us for a free consultation and we'll help you find the right insurance coverage for your situation.</p>
        <div class="cta-buttons">
          <a href="/contact-us/" class="btn btn-primary btn-lg">Get a Free Quote</a>
          <a href="/contact-us/" class="btn btn-outline btn-lg">Contact Us</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <div class="faq-section">
        <div class="section-title">
          <h2>Frequently Asked Questions</h2>
        </div>
        <FAQAccordion client:visible faqs={servicesFaqs} />
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.hero { background: linear-gradient(rgba(15,23,42,0.7), rgba(30,41,59,0.75)), url('/images/insurance-greece-3.jpg') center/cover no-repeat; color: var(--white); padding: var(--spacing-16) 0; text-align: center; }
.hero h1 { font-size: var(--font-size-4xl); margin-bottom: var(--spacing-4); color: var(--white); }
.hero p { font-size: var(--font-size-xl); color: var(--gray-300); margin-bottom: 0; }
.intro { font-size: var(--font-size-lg); line-height: 1.8; color: var(--color-text-light); text-align: center; max-width: 800px; margin: 0 auto var(--spacing-12); }
.services-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--spacing-6); margin-bottom: var(--spacing-16); }
.service-card { display: flex; gap: var(--spacing-6); background: var(--white); border-radius: var(--radius-xl); box-shadow: var(--shadow-md); overflow: hidden; transition: transform var(--transition-base), box-shadow var(--transition-base); text-decoration: none; }
.service-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-xl); }
.service-icon { width: 200px; min-height: 200px; flex-shrink: 0; overflow: hidden; }
.service-icon img { width: 100%; height: 100%; object-fit: cover; }
.service-info { padding: var(--spacing-6); display: flex; flex-direction: column; }
.service-info h2 { font-size: var(--font-size-xl); margin-bottom: var(--spacing-2); color: var(--brand-dark); }
.service-info p { font-size: var(--font-size-sm); color: var(--color-text-light); flex: 1; margin-bottom: var(--spacing-2); }
.learn-more { color: var(--brand-orange); font-weight: 600; font-size: var(--font-size-sm); }
.cta-section { text-align: center; padding: var(--spacing-12); background: linear-gradient(135deg, var(--brand-orange) 0%, #ff9933 100%); border-radius: var(--radius-2xl); color: var(--white); }
.cta-section h2 { color: var(--white); margin-bottom: var(--spacing-4); }
.cta-section p { color: rgba(255,255,255,0.9); font-size: var(--font-size-lg); margin-bottom: var(--spacing-6); }
.cta-buttons { display: flex; gap: var(--spacing-4); justify-content: center; }
.cta-section .btn-primary { background-color: var(--white); color: var(--brand-orange); }
.cta-section .btn-primary:hover { background-color: var(--brand-dark); color: var(--white); }
.cta-section .btn-outline { border-color: var(--white); color: var(--white); }
.cta-section .btn-outline:hover { background: var(--white); color: var(--brand-orange); }
.faq-section { max-width: 800px; margin: 0 auto; }
@media (max-width: 1024px) { .services-grid { grid-template-columns: 1fr; } }
@media (max-width: 768px) { .hero { padding: var(--spacing-10) 0; } .hero h1 { font-size: var(--font-size-3xl); } .service-card { flex-direction: column; } .service-icon { width: 100%; min-height: 150px; } .cta-buttons { flex-direction: column; align-items: center; } }
</style>
