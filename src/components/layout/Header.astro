<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('[data-menu-toggle]') as HTMLButtonElement | null;
    const menu = document.querySelector('[data-menu]') as HTMLElement | null;
    const dropdownTriggers = document.querySelectorAll('[data-dropdown-trigger]');

    // Mobile menu toggle
    const quoteDropdownTrigger = document.querySelector('[data-quote-dropdown]') as HTMLButtonElement | null;
    const quoteDropdown = quoteDropdownTrigger?.nextElementSibling as HTMLElement | null;

    menuToggle?.addEventListener('click', () => {
      const isOpen = menu?.classList.toggle('open');
      menuToggle.setAttribute('aria-expanded', String(isOpen));

      // Auto-open "Get a Quote" dropdown on mobile
      if (isOpen && window.innerWidth <= 1024 && quoteDropdownTrigger && quoteDropdown) {
        quoteDropdownTrigger.setAttribute('aria-expanded', 'true');
        quoteDropdown.classList.add('open');
      }
    });

    // Dropdown toggles (for mobile)
    dropdownTriggers.forEach((trigger) => {
      trigger.addEventListener('click', () => {
        const expanded = trigger.getAttribute('aria-expanded') === 'true';
        const dropdown = trigger.nextElementSibling as HTMLElement | null;

        // Close other dropdowns
        dropdownTriggers.forEach((otherTrigger) => {
          if (otherTrigger !== trigger) {
            otherTrigger.setAttribute('aria-expanded', 'false');
            const otherDropdown = otherTrigger.nextElementSibling as HTMLElement | null;
            otherDropdown?.classList.remove('open');
          }
        });

        trigger.setAttribute('aria-expanded', String(!expanded));
        dropdown?.classList.toggle('open');
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('.header')) {
        menu?.classList.remove('open');
        menuToggle?.setAttribute('aria-expanded', 'false');
        dropdownTriggers.forEach((trigger) => {
          trigger.setAttribute('aria-expanded', 'false');
          const dropdown = trigger.nextElementSibling as HTMLElement | null;
          dropdown?.classList.remove('open');
        });
      }
    });
  });
</script>

<style>
.header { position: sticky; top: 0; z-index: 1000; background-color: var(--white); box-shadow: var(--shadow-sm); }
.nav { display: flex; align-items: center; justify-content: space-between; padding: var(--spacing-4) 0; }
.logo { display: flex; align-items: center; flex-shrink: 0; }
.logo :global(img) { width: 330px; height: auto; }
.mobile-toggle { display: none; background: none; border: none; cursor: pointer; padding: var(--spacing-2); }
.mobile-contact-buttons { display: none; }
.hamburger { display: flex; flex-direction: column; gap: 5px; width: 24px; }
.hamburger span { display: block; height: 2px; background-color: var(--brand-dark); transition: transform var(--transition-base); }
.menu { display: flex; align-items: center; gap: var(--spacing-1); list-style: none; margin: 0; padding: 0; }
.menu-item { position: relative; margin: 0; }
.menu-item > a, .dropdown-trigger { display: flex; align-items: center; gap: var(--spacing-1); padding: var(--spacing-2) var(--spacing-3); font-size: var(--font-size-sm); font-weight: 500; color: var(--brand-dark); text-decoration: none; background: none; border: none; cursor: pointer; font-family: var(--font-family); transition: color var(--transition-fast); }
.menu-item > a:hover, .dropdown-trigger:hover { color: var(--brand-orange); }
.dropdown-icon { transition: transform var(--transition-fast); }
.dropdown-trigger[aria-expanded="true"] .dropdown-icon { transform: rotate(180deg); }
.has-dropdown { position: relative; }
.dropdown { position: absolute; top: 100%; left: 0; min-width: 220px; background: var(--white); border-radius: var(--radius-lg); box-shadow: var(--shadow-lg); list-style: none; margin: 0; padding: var(--spacing-2); opacity: 0; visibility: hidden; transform: translateY(-10px); transition: all var(--transition-base); }
.has-dropdown:hover .dropdown, .dropdown.open { opacity: 1; visibility: visible; transform: translateY(0); }
.dropdown li { margin: 0; }
.dropdown a { display: block; padding: var(--spacing-2) var(--spacing-3); font-size: var(--font-size-sm); color: var(--brand-dark); border-radius: var(--radius-md); transition: background-color var(--transition-fast); }
.dropdown a:hover { background-color: var(--gray-100); color: var(--brand-orange); }
.cta-button { margin-left: var(--spacing-2); padding: var(--spacing-2) var(--spacing-4); font-size: var(--font-size-sm); background-color: var(--brand-orange); color: var(--white); border: 2px solid var(--brand-orange); border-radius: var(--radius-md); font-weight: 600; text-decoration: none; transition: background-color var(--transition-fast), color var(--transition-fast), transform var(--transition-fast); }
.cta-button:hover { background-color: #e56e00; color: var(--white); transform: translateY(-1px); }

@media (max-width: 1024px) {
  .logo :global(img) { width: 290px; height: auto; }
  .mobile-toggle { display: block; }
  .nav { padding: var(--spacing-4) var(--spacing-4); }
  .menu { position: fixed; top: 90px; left: 0; right: 0; bottom: 0; flex-direction: column; align-items: stretch; gap: 0; background: var(--white); padding: var(--spacing-4); overflow-y: auto; transform: translateX(-100%); transition: transform var(--transition-base); }
  .menu.open { transform: translateX(0); }
  .menu-item > a, .dropdown-trigger { padding: var(--spacing-3) var(--spacing-4); font-size: var(--font-size-base); justify-content: space-between; border-bottom: 1px solid var(--gray-100); }
  .dropdown { position: static; box-shadow: none; opacity: 1; visibility: visible; transform: none; max-height: 0; overflow: hidden; padding: 0; background: var(--gray-50); border-radius: 0; transition: max-height var(--transition-base); }
  .dropdown.open { max-height: 500px; padding: var(--spacing-2); }
  .dropdown a { padding: var(--spacing-2) var(--spacing-4); }
  .cta-button { margin: var(--spacing-4) 0 0 0; text-align: center; display: block; padding: var(--spacing-3) var(--spacing-4); }
  .mobile-contact-buttons { display: block; margin-top: var(--spacing-4); padding-top: var(--spacing-4); border-top: 2px solid var(--gray-200); }
  .mobile-contact-row { display: flex; flex-direction: column; gap: var(--spacing-3); }
  .mobile-contact-btn { flex: 1; display: flex; align-items: center; justify-content: center; gap: var(--spacing-2); padding: var(--spacing-3); border-radius: var(--radius-lg); font-size: var(--font-size-sm); font-weight: 600; text-decoration: none; color: var(--white); background: var(--brand-orange); }
  .mobile-contact-btn.whatsapp-btn { background: #25D366; }
}
</style>
