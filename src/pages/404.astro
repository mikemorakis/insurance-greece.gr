---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Page Not Found | Insurance Greece" description="The page you're looking for doesn't exist.">
  <section class="not-found">
    <div class="container">
      <h1>404</h1>
      <h2>Page Not Found</h2>
      <p>The page you're looking for doesn't exist or has been moved.</p>
      <div class="actions">
        <a href="/" class="btn btn-primary btn-lg">Go to Homepage</a>
        <a href="/contact-us/" class="btn btn-outline btn-lg">Contact Us</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.not-found { min-height: 60vh; display: flex; align-items: center; justify-content: center; text-align: center; padding: var(--spacing-16) 0; }
.not-found h1 { font-size: 8rem; color: var(--brand-orange); line-height: 1; margin-bottom: var(--spacing-4); }
.not-found h2 { font-size: var(--font-size-3xl); margin-bottom: var(--spacing-4); }
.not-found p { color: var(--color-text-light); margin-bottom: var(--spacing-8); font-size: var(--font-size-lg); }
.actions { display: flex; gap: var(--spacing-4); justify-content: center; }
@media (max-width: 768px) { .not-found h1 { font-size: 5rem; } .actions { flex-direction: column; align-items: center; } }
</style>
